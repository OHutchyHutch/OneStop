<!DOCTYPE html>

<head>
    <title>Admin Login</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
</head>

<body>
    <%- include('../components/navbar') %>
        <form action="/admin" method="POST" class="my-4">
            <div class="row justify-content-center">
                <div class="col-xl-3 col-lg-6 col-md-9 col-sm-12">
                    <div class="card" style="border-radius: 1rem;">
                        <div class="p-5 text-center">

                            <h2 class="fw-bold mb-4">ADMIN LOGIN</h2>

                            <input required type="email" name="email" id="email"
                                class="form-control form-control-lg mb-4" placeholder="Email" />

                            <input required type="password" name="password" id="password"
                                class="form-control form-control-lg mb-4" placeholder="Password" maxlength="32"
                                minlength="7" />

                            <input required type="password" name="key" id="key"
                                class="form-control form-control-lg mb-4" placeholder="KEY" />

                            <!--<p class="small mb-3"><a class="text-white-50" href="#!">Forgot password?</a></p>-->

                            <div class="col-12 justify-content-center">
                                <button class="btn itemoutline hoverable btn-lg px-4" type="submit">Login</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
</body>

</html>
</div>