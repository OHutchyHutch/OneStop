<!DOCTYPE html>
<html>

    <head>
        <title>Home</title>
    </head>

    <body>
        <% if (loggedIn) { %>
        <%- include('components/loggedinnavbar') %>
    <% } else { %>
        <%- include('components/navbar') %>
    <% } %>
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-12 justify-content-center">
                <% servers.forEach(server => { %>
                    <div class="row mt-3 d-flex flex-wrap align-items-center">
                        <div class="col-12 bg-dark p-3">
                            <div class="row align-middle">
                                <div class="col-xl-4 col-lg-12 justify-content-center text-center">
                                    <div class="row d-flex align-items-center align-middle">
                                        <div class="col">
                                            <div class="row">
                                                <h4 class="text-white"><span class="align-middle"><%- server.servername -%></span></h4>
                                            </div>
                                            <div class="row">
                                                <% if (server.port) { %>
                                                    <h6><%- server.ip -%>:<%- server.port -%></h6>
                                                <% } else { %>
                                                    <h6><%- server.ip -%></h6>
                                                <% } %>
                                            </div>
                                        </div>
                                        <div class="col">
                                            <% if (server.status) { %>
                                                <h6><span class="ms-3 badge rounded-pill bg-success align-middle"><%- server.playercount -%> Online</span> </h6>
                                                <% } else { %>
                                                    <h6><span class="ms-3 badge rounded-pill bg-danger align-middle">OFFLINE</span> </h6>
                                                <% } %>
                                        </div>
                                    </div>                 
                                </div>
                                <div class="col-xl-5 col-lg-12 d-flex align-items-center justify-content-center">
                                    <a href="/servers/profile/<%- server.ID -%>" class="d-block mt-2" style="max-width:468px;">
                                        <img src="/serverbanners/<%- server.banner -%>" id="banner" alt="18d10cb44bc181199f4aa3e3c2ff2f03.gif" class="rounded-top w-100 img-fluid">
                                    </a>
                                </div>
                                <div class="col-xl-3 col-lg-12 text-center align-middle" name="tags" value='<%- server.tags -%>'></div>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
        
    </div>
    
    <script src="/js/tagdisplay.js"></script>
</body>

</html>