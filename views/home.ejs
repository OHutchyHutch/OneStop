<!DOCTYPE html>
<html>

    <head>
        <title>Home</title>
    </head>

    <body>
        <% if (loggedIn) { %>
        <%- include('components/loggedinnavbar') %>
    <% } else { %>
        <%- include('components/navbar') %>
    <% } %>
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-lg-6 justify-content-center">
                <% servers.forEach(server => { %>
                    <div class="row mt-3">
                        <div class="col-12 bg-dark">
                            <div class="row">
                                <div class="col-1 pe-0 text-center align-middle">
                                    <span class="align-middle">
                                        <h1 class="align-middle">1</h1>
                                    </span>
                                </div>
                                <div class="col-lg-3 ps-0 d-flex align-items-center justify-content-center">
                                    <span>
                                        <h3 class="align-middle"><%- server.servername -%></h3>
                                        <h5><%- server.ip -%> | 0 / 0</h5>
                                    </span>
                                </div>
                                <div class="col-lg-6 d-flex align-items-center justify-content-center">
                                    <a href="/servers/profile/<%- server.ID -%>" class="d-block mt-2" style="max-width:468px;">
                                        <img src="/serverbanners/<%- server.banner -%>" id="banner" alt="18d10cb44bc181199f4aa3e3c2ff2f03.gif" class="rounded-top w-100 img-fluid">
                                    </a>
                                </div>
                                <div class="col-lg-1 d-flex align-items-center justify-content-center" id="tags">
                                    <span class="badge rounded-pill bg-secondary me-1">Test</span>
                                    <span class="badge rounded-pill bg-secondary me-1">Test2</span>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
        
    </div>
    
    
</body>

</html>