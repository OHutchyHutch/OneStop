<!DOCTYPE html>
<html>

<head>
    <title>Create Account</title>
    <%- include('components/generalcss') %>
    <%- include('components/generalscript') %>
</head>

<body>
    <%- include('components/navbar') %>
    <% if (alert) { %>
      <% if (alert === "emailalreadyinuse") { %>
          <div class="alert alert-danger text-center mt-3" role="alert">
              <i class="bi mx-2 bi-exclamation-triangle-fill"></i>That email is already in use!
          </div>
      <% } %> 
    <% } %> 
    <form action="/createaccount" method="POST" class="my-4 form-inline">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-xl-3">
              <div class="card text-white" style="border-radius: 1rem; background-color: black">
                <div class="card-body p-5 text-center">
      
                    <h2 class="fw-bold mb-4 text-uppercase">Create an Account</h2>
      
                    <div class="form-outline form-white mb-4">
                      <input required type="email" name="email" id="email" class="form-control form-control-lg" placeholder="Email" />
                    </div>
      
                    <div class="form-outline form-white mb-4">
                      <input required type="password" name="password" id="password" class="form-control form-control-lg" placeholder="Password" />
                    </div>

                    <p class="small mb-3"><span class="text-white-50">Already have an account? <a href="login">Click Here!</a> </span></p>

                    <!--<p class="small mb-3"><a class="text-white-50" href="#!">Forgot password?</a></p>-->

                    <div class="col-12 text-center justify-content-center">
                        <button class="btn btn-outline-primary btn-lg px-4" type="submit">Register</button>
                    </div>
                </div>
              </div>
            </div>
          </div>
    </form>
</body>

</html>